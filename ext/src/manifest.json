{
  "manifest_version": 3,
  "name": "Release Calendar Filter for Crunchyroll",
  "description": "A filter for the Release/Simulcast Calendar on Crunchyroll.",
  "version": "1.2.3",
  "icons": {
    "128": "images/icon.png"
  },
  "options_page": "options/options.html",
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/checkmark.svg",
        "fonts/*",
        "options/options.html"
      ],
      "extension_ids": [
        "mfgoapmnldpghliobopfedckpljcfejk",
        "epkclcbkefpikbpopcpjjlbajhnglged"
      ],
      "matches": [
        "*://*.crunchyroll.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.crunchyroll.com/simulcastcalendar*",
        "*://*.crunchyroll.com/*/simulcastcalendar*"
      ],
      "run_at": "document_idle",
      "css": [
        "css/fontello.css",
        "css/index.css"
      ],
      "js": [
        "js/bundle.js"
      ]
    }
  ]
}